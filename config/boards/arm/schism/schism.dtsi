/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	model = "schism";
	compatible = "gbrnt,schism";

	chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
    zmk,battery = &vbatt;
	};

	aliases {
		led0 = &green_led;
	};

	leds {
		compatible = "gpio-leds";
		green_led: led_0 {
			gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};
	};

	vbatt: vbatt {
		compatible = "zmk,battery-voltage-divider";
		label = "VBATT";
    io-channels = <&adc 3>;
    output-ohms = <2000000>;
    full-ohms = <(2000000 + 806000)>;
	};

	default_transform: transform {
		compatible = "zmk,matrix-transform";
		rows = <5>;
		columns = <6>;

        // Switch numbers of board
        // SW1  | SW2  | SW3  | SW4  | SW5  | SW6
        // SW7  | SW8  | SW9  | SW10 | SW11 | SW12
        // SW13 | SW14 | SW15 | SW16 | SW17 | SW18
        // SW19 | SW20 | SW21 | SW22 | SW23 | SW24
        // SW25 | SW26 | SW27 | SW28 | SW29 | SW30

        // So the interesting ones for Ardux
        // SW8  SW9  SW10 SW11
        // SW14 SW15 SW16 SW17

		map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)
        >;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};


&usbd {
	status = "okay";
};


&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		sd_partition: partition@0 {
			label = "mbr";
			reg = <0x00000000 0x00001000>;
		};
		code_partition: partition@1000 {
			label = "code_partition";
			reg = <0x00001000 0x000d3000>;
		};

		storage_partition: partition@d4000 {
			label = "storage";
			reg = <0x000d4000 0x00020000>;
		};

		boot_partition: partition@f4000 {
			label = "adafruit_boot";
			reg = <0x000f4000 0x0000c000>;
		};
	};
};


&i2c0 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	sda-pin = <23>;
	scl-pin = <21>;

	oled: ssd1306@3c {
		compatible = "solomon,ssd1306fb";
		reg = <0x3c>;
		label = "DISPLAY";
		width = <128>;
		height = <32>;
		segment-offset = <0>;
		page-offset = <0>;
		display-offset = <0>;
		multiplex-ratio = <31>;
		//segment-remap;
		//com-invdir;
		com-sequential;
		prechargep = <0x22>;
	};
};
